#!/bin/bash

help="Usage: `basename $0` PARTITION DIRECTORY"

nocreate=false

while getopts :hn opt; do
    case "$opt" in
        h)
            echo "$help"
            exit 0
            ;;
        \?)
            echo "$help"
            echo "Invalid arg: -$OPTARG" >&2
            exit 1
            ;;
        :)
            echo "$help"
            echo "-$OPTARG requires an argument" >&2
            exit 1
            ;;
        n)
            nocreate=true
            ;;
    esac
done

PART=${@:$OPTIND:1}
DIR=${@:$OPTIND+1:1}

if [ ! -b "$PART" ]; then
    echo "Error: '$PART' is not a valid block device"
    echo "$help"
    exit 1
fi

PARTTYPE=$(blkid | grep "$PART" | cut -d' ' -f4 | cut -d= -f2 | sed "s/\"//g")

if [ -d "$DIR" ]; then
    sudo chown 1000:1000 "$DIR"
    case "$PARTTYPE" in
        ntfs|ntfs-3g)
            sudo mount -o uid=1000,gid=1000,dmask=027,fmask=137 -t ntfs-3g  "$PART" "$DIR"
            ;;
        *)
            sudo mount -t "$PARTTYPE" "$PART" "$DIR"
            ;;
        esac
else
    if $nocreate; then
        echo "Error: '$DIR' does not already exist, and 'no create' flag was present"
        exit 1
    else
        sudo mkdir "$DIR"
        sudo chown 1000:1000 "$DIR"
        sudo mount -o uid=1000,gid=1000,dmask=027,fmask=137 -t ntfs-3g "$PART" "$DIR"
    fi

fi


